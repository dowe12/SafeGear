<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".EditarVehiculo"
    android:stretchColumns="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Editar Vehículo"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="95dp"
                />
            <TextView
                android:id="@+id/tv_placa_EditarVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginEnd="158dp"
                android:layout_marginBottom="2dp"
                android:text="aqui va la placa" />
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Marca"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    />

                <EditText
                    android:id="@+id/edt_MarcaVehiculo_EditarVehiculo"
                    android:layout_width="158dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:autofillHints=""
                    android:background="@drawable/input_bordes"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="3dip"
                    android:textColor="#8F8F8F"
                    tools:text="Marca" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Modelo"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    tools:text="Modelo" />

                <EditText
                    android:id="@+id/edt_ModeloVehiculo_EditarVehiculo"
                    android:layout_width="158dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:autofillHints=""
                    android:background="@drawable/input_bordes"
                    android:ems="10"
                    android:inputType="text|number"
                    android:padding="3dip"
                    android:textColor="#8F8F8F"
                    tools:text="Modelo" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:text="Tipo de vehículo" />
                <Spinner
                    android:id="@+id/spn_TipoVehiculo_EditarVehiculo"
                    android:layout_width="126dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="@string/name"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/TipoVehiculo"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="254dp" />

            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Color"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    tools:text="Color" />

                <EditText
                    android:id="@+id/edt_ColorVehiculo_EditarVehiculo_"
                    android:layout_width="158dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:autofillHints=""
                    android:background="@drawable/input_bordes"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="3dip"
                    android:textColor="#8F8F8F"
                    tools:text="Color" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Combustible"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    tools:text="Combustible" />

                <Spinner
                    android:id="@+id/spn_combustible_EditarVehiculo"
                    android:layout_width="126dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/name"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/TipoCombustible"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="254dp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Cilindraje"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    tools:text="Cilindraje" />

                <EditText
                    android:id="@+id/edt_cilindraje_EditarVehiculo"
                    android:layout_width="158dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:autofillHints=""
                    android:background="@drawable/input_bordes"
                    android:ems="10"
                    android:hint="Este campo es obligatorio"
                    android:inputType="number"
                    android:padding="3dip"
                    android:textColor="#8F8F8F"
                    tools:text="Cilindraje" />
            </TableRow>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Soat"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="17dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                tools:text="Soat" />



            <TableRow>

                <EditText
                    android:id="@+id/edt_FechaInicio_EditarSOAT"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="55dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_custom"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha Inicio"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/edt_FechaFin_EditarSOAT"
                    android:layout_width="20dp"
                    android:textAlignment="center"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edittext_custom"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha Fin"
                    android:inputType="none" />


            </TableRow>

            <TextView
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Tecnomecanica"
                android:textColor="#000000"
                android:textSize="23sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="17dp"
                tools:text="Tecnomecanica" />

            <TableRow>

                <EditText
                    android:id="@+id/edt_FechaInicio_EditarTECNO"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="55dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_custom"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha Inicio"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/edt_FechaFin_EditarTECNO"
                    android:layout_width="20dp"
                    android:textAlignment="center"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edittext_custom"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha Fin"
                    android:inputType="none" />


            </TableRow>

            <Button
                android:id="@+id/btn_editar_vehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="80dp"
                android:background="@color/btn_color"
                android:backgroundTint="@color/btn_color2"
                android:text="Registrar"
                tools:layout_editor_absoluteX="283dp"
                tools:layout_editor_absoluteY="513dp" />


        </TableLayout>
    </LinearLayout>

</ScrollView>
